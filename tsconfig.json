{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "rootDirs": ["src", "test"],
    "baseUrl": "./",
  },
  "include": ["src", "test"],
  "exclude": []
}
