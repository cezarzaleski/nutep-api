{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src",
      "test"
    ],
    "baseUrl": "src",
    "paths": {
      "@/test/*": ["../test/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src",
    "test"
  ],
  "exclude": []
}
